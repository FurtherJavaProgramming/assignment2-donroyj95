<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.SelectBooks">

    <fx:include source="MenuBar.fxml" />

    <Label alignment="CENTER" prefWidth="869.0" styleClass="header" text="Select Books">
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
        <font>
            <Font size="20.0" />
        </font></Label>

    <TableView fx:id="bookTable" prefHeight="300" prefWidth="400">
        <columns>
            <TableColumn prefWidth="75.0" text="Select" />
            <TableColumn text="Title">
                <cellValueFactory>
                    <PropertyValueFactory property="bookTitle" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Author">
                <cellValueFactory>
                    <PropertyValueFactory property="authors" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Price">
                <cellValueFactory>
                    <PropertyValueFactory property="price" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="152.79998779296875" text="Available Copies">
                <cellValueFactory>
                    <PropertyValueFactory property="availableCopies" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="133.59994506835938" text="Buying Copies" />
        </columns>
        <VBox.margin>
            <Insets left="50.0" right="50.0" top="20.0" />
        </VBox.margin>
    </TableView>

    <Button mnemonicParsing="false" text="Add to Shopping Cart">
        <VBox.margin>
            <Insets left="50.0" top="25.0" />
        </VBox.margin>
    </Button>
    <Button mnemonicParsing="false" text="Back">
        <VBox.margin>
            <Insets bottom="20.0" left="50.0" top="10.0" />
        </VBox.margin>
    </Button>

</VBox>

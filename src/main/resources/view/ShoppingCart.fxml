<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <fx:include source="MenuBar.fxml"  fx:id="menuBarInclude"/>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="3.0" layoutY="20.0" prefHeight="27.0" prefWidth="870.0" text="Shopping Cart" textAlignment="CENTER" AnchorPane.bottomAnchor="442.40000000000003" AnchorPane.topAnchor="30.0">
            <font>
                <Font size="18.0" />
            </font>
        </Label>

        <TableView layoutX="50.0" layoutY="69.0" prefHeight="250.0" prefWidth="500.0">
            <columns>
            <TableColumn prefWidth="75.0" text="Select" />
                <TableColumn text="Book Title">
                    <cellValueFactory>
                        <PropertyValueFactory property="bookTitle" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Quantity">
                    <cellValueFactory>
                        <PropertyValueFactory property="quantity" />
                    </cellValueFactory>
                </TableColumn>
                <!-- we can add more columns as needed -->
            </columns>
        </TableView>

        <VBox layoutX="50.0" layoutY="324.0" spacing="10">
            <HBox spacing="10">
                <Label text="Total Price: " />
                <Label fx:id="totalPriceLabel" />
            </HBox>

            <Button text="Continue Shopping" />
            <Button text="Remove Selected Item" />
            <Button text="Clear Cart" />
            <Button text="Proceed to Checkout" />
        </VBox>
    </children>
</AnchorPane>

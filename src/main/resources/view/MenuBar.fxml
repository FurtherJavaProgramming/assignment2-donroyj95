<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<!--        fx:controller="view.MenuBar"-->

<AnchorPane xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MenuBarController">

    <MenuBar prefHeight="25.0" prefWidth="870.0" VBox.vgrow="NEVER">
        <Menu mnemonicParsing="false" text="Profile">
            <items>
                <MenuItem onAction="#viewUserProfile" text="View my profile" mnemonicParsing="false"/>
                <MenuItem onAction="#updateUserProfile" mnemonicParsing="false" text="Update my profile"/>
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="User">
            <items>
                <MenuItem onAction="#logout" mnemonicParsing="false" text="Log out"/>
            </items>
        </Menu>
    </MenuBar>


</AnchorPane>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1">
    <fx:include fx:id="menuBarInclude" source="MenuBar.fxml" />
    <Label styleClass="header" text="All Orders">
      <font>
         <Font size="20.0" />
      </font></Label>

    <TableView fx:id="orderTable" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn fx:id="orderId" prefWidth="148.0000228881836" text="Order Id">
                <cellValueFactory>
                    <PropertyValueFactory property="orderId" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="dateTime" prefWidth="150.4000244140625" text="Date and Time">
                <cellValueFactory>
                    <PropertyValueFactory property="dateTime" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="totalPrice" minWidth="0.0" prefWidth="115.199951171875" text="Total Price">
                <cellValueFactory>
                    <PropertyValueFactory property="totalPrice" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="booksAndCopies" prefWidth="199.20004272460938" text="Books \&amp; Copies Purchased">
                <cellValueFactory>
                    <PropertyValueFactory property="orderItems" />
                </cellValueFactory>
            </TableColumn>
        </columns>
      <VBox.margin>
         <Insets left="50.0" right="50.0" />
      </VBox.margin>
    </TableView>

    <HBox alignment="CENTER" spacing="10">
        <Button text="Back" />
        <Button text="Export to CSV" />
    </HBox>
    <padding>
        <Insets bottom="60.0" />
    </padding>
</VBox>
